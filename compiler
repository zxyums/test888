import React from "react";
import { AgGridReact } from "ag-grid-react";
import "ag-grid-community/styles/ag-grid.css";
import "ag-grid-community/styles/ag-theme-alpine.css";
import "ag-grid-enterprise"; // Enable enterprise features

const PivotAGGrid = () => {
  const rowData = [
    { name: "John", age: 28, city: "New York" },
    { name: "Alice", age: 25, city: "Los Angeles" }
  ];

  const columnDefs = [
    { field: "name", pivot: true }, // Set name as pivot (acts as row headers)
    { field: "age", headerName: "Age", aggFunc: "first" },
    { field: "city", headerName: "City", aggFunc: "first" }
  ];

  return (
    <div className="ag-theme-alpine" style={{ height: 400, width: "100%" }}>
      <AgGridReact
        rowData={rowData}
        columnDefs={columnDefs}
        pivotMode={true} // Enable Pivot Mode
        defaultColDef={{ flex: 1, sortable: true, filter: true }}
      />
    </div>
  );
};

export default PivotAGGrid;